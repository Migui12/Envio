<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Envio.App">
    <Application.Resources>
        <Color x:Key="PKColor">#7E9EFC</Color>
        <Style x:Key="btn-primary" TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PKColor}"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Margin" Value="80,0"/>
        </Style>

        <!-- ESTILO DE BOTONES -->
        <Style x:Key="btn-green" TargetType="Button">
            <Setter Property="BackgroundColor" Value="LightSeaGreen"/>
            <Setter Property="Margin" Value="80,0"/>
            <Setter Property="CornerRadius"  Value="50"/>
            <Setter Property="TextColor" Value="White"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        
    </Application.Resources>
</Application>